<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Authors>Proto.Actor Team</Authors>
    <Company>Proto.Actor Team</Company>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AssemblyName>protograin</AssemblyName>
    <PackageId>protograin</PackageId>
    <LangVersion>8</LangVersion>
    <PackAsTool>true</PackAsTool>
    <Description>Generate Proto.Actor grains as C# code files from proto RPC contracts.</Description>
    <DevelopmentDependency>true</DevelopmentDependency>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageProjectUrl>http://proto.actor/</PackageProjectUrl>
    <PackageIcon>logo.png</PackageIcon>
    <RepositoryUrl>https://github.com/AsynkronIT/protoactor-dotnet</RepositoryUrl>
    <PackageTags>actors actor model concurrency proto protoactor</PackageTags>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="MinVer" Version="2.4.0" PrivateAssets="All" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Handlebars.Net" Version="1.10.1" />
    <PackageReference Include="protobuf-net" Version="3.0.29" />
    <PackageReference Include="protobuf-net.Reflection" Version="3.0.29" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta1.20371.2" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(MSBuildStartupDirectory)\logo.png" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>